<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity">

    <TextView
        android:id="@+id/Fighter1View"
        android:layout_width="144dp"
        android:layout_height="79dp"
        android:text="TextView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/Hit1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="46dp"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toBottomOf="@+id/Fighter1View" />

    <Button
        android:id="@+id/Kick1Button"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/Hit1Button"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/Fighter2View"
        android:layout_width="151dp"
        android:layout_height="78dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/Fighter1View"
        android:layout_marginLeft="181dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/Hit2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toBottomOf="@+id/Fighter2View"
        android:layout_marginRight="71dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Kick2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="71dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hit2Button" />
</android.support.constraint.ConstraintLayout>
